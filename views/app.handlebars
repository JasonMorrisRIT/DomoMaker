<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>DomoMaker</title>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <link rel="shortcut icon" href="/assets/img/favicon.png"/>
  <link rel="stylesheet" type="text/css" href="/assets/style.css"/>
</head>
<body>
  <nav><a href="/login"><img id="logo" src="/assets/img/ball.png" alt="face logo"/></a>
    <div class="navlink"><a href="/logout">Log out</a></div>
		<div class="navlink"><a href="/world">World</a></div>
		<div class="navlink"><a href="/battle">Battle!</a></div>
  </nav>
  <section id="makeDomo">
    <form id="domoForm" name="domoForm" action="/maker" method="POST" class="domoForm">
      <label for="nameP">Name: </label>
      <input id="domoName" type="text" name="nameP" placeholder="Search Pokemon"/>
			<input type="hidden" name=_csrf value={{csrfToken}} />
      <a id="makeDomoSubmit" href="#" class="makeDomoSubmit">Add to Party</a>
    </form>
		<!--<form id="domoChildForm" nameC="domoChildForm" action="/childMaker" method="POST" class="domoForm">
      <label for="nameC">Parent's Name: </label>
      <input id="domoChildName" type="text" name="nameC" placeholder="Domo Name"/>
			<input type="hidden" name=_csrf value={{csrfToken}} />
      <a id="makeDomoChildSubmit" href="#" class="makeDomoSubmit">Make Child Domo</a>
    </form> -->
  </section>
  <section id="domos">
    <div class="domo">
			<h1>Your Pokemon</h1>
			
			{{#if domos}}
			{{#each domos}}
			<div class="domo"><img src="/assets/img/{{this.path}}" alt="domo face" class="domoFace"/>
				<h3 class="domoName">Name: {{this.name}}</h3>
				<h3 class="domoAge"> Wins: {{this.wins}}</h3>
			</div>
			{{/each}}
			{{else}}
			<h3 class="emptyDomo">No Pokes yet</h3>
			{{/if}}	
			
    </div>
  </section>
  <div id="domoMessage"><img id="speech" src="/assets/img/speech.png" alt="speech box"/>
    <h3><span id="errorMessage"></span></h3><img id="domo" src="assets/img/oak.png" alt="domo"/>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.34/browser.min.js"></script>
  <script src="/assets/maker.js" type="text/babel"></script>
</body>
</html>